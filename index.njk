---
layout: framer-base.njk
title: Home
---

<!-- Intro Section -->
<section class="intro-section">
    <div class="profile">
        <div class="profile-image">
            <img src="{{ homepage.profileImage }}" alt="{{ site.name }}" class="profile-img">
            <div class="status-dot"></div>
        </div>
        <div class="profile-info">
            <h1>Hey! I'm {{ site.name }}</h1>
            <div class="profile-title">{{ site.title }}</div>
        </div>
    </div>

    <div class="bio-content">
        <p>{{ site.bio }} {{ homepage.intro1 }}</p>

        <p>{{ homepage.intro2 }}</p>

        <p>{{ homepage.intro3 }}</p>

        <p><strong>{{ homepage.beliefStatement }}</strong><br>{{ homepage.beliefDescription }}</p>
    </div>
</section>

<!-- Blog Posts and Features Section -->
<section class="section">
    <h2>Blog posts and features</h2>
    <div class="ventures-grid">
        {% for project in projects %}
        <a href="{{ project.url }}" target="_blank" class="venture-card">
            <div class="venture-title">
                {{ project.title }}
                <svg class="arrow-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M4.5 19.5L19.5 4.5M19.5 4.5L8.25 4.5M19.5 4.5V15.75"/>
                </svg>
            </div>
            <div class="venture-description">{{ project.description }}</div>
        </a>
        {% endfor %}
    </div>
</section>

<!-- Expertise Areas Section -->
<section class="section">
    <h2>Area of expertise</h2>
    <div class="expertise-areas-grid">
        {% for area in homepage.expertiseAreas %}
        <div class="expertise-area-card">
            <h3 class="expertise-area-title">{{ area.title }}</h3>
            <p class="expertise-area-description">{{ area.description }}</p>
        </div>
        {% endfor %}
    </div>
</section>

<!-- Personal Section -->
<section class="section">
    <h2>{{ homepage.personalTitle }}</h2>
    <div class="personal-content">
        <p>{{ homepage.personalIntro }}</p>
        <ol>
            {% for item in homepage.personalItems %}
            <li>{{ item.item }}</li>
            {% endfor %}
        </ol>
    </div>
</section>
